<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="in.sanitization.sanitization.Fragments.ABoutUsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/back"
            android:alpha=".5"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:background="@drawable/semi_cirlce2"
            android:layout_height="300dp">
            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/iconn"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
            <in.sanitization.sanitization.Fonts.LatoBLack

                android:layout_width="wrap_content"
                android:text="Terms &amp; Conditions"
                android:textAllCaps="false"
                android:textSize="@dimen/space_25"
                android:textColor="@color/white"
                android:textAlignment="center"

                android:layout_marginBottom="@dimen/space_30"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_marginTop="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_marginRight="@dimen/space_5"
            android:padding="@dimen/space_5"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Terms and Conditions "
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"
                    android:visibility="gone"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/gray"
                    android:layout_margin="@dimen/space_5"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/text"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space_5"
                    android:paddingRight="@dimen/space_5"

                    android:paddingBottom="@dimen/space_5"




                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
