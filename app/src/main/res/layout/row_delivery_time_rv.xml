<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/space_3"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_8">

            <LinearLayout
                android:id="@+id/liner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/rb_adres"
                android:layout_toStartOf="@+id/rb_adres"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <in.sanitization.sanitization.Fonts.LatoBLack
                        android:textColor="#000"
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:" />

                    <in.sanitization.sanitization.Fonts.LatoBLack
                        android:textColor="#000"
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_2"
                        android:layout_marginStart="@dimen/space_2"
                        android:text="TextView" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5"
                    android:orientation="horizontal">

                    <in.sanitization.sanitization.Fonts.LatoBLack
                        android:textColor="#000"
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile No. " />

                    <in.sanitization.sanitization.Fonts.LatoBLack
                        android:textColor="#000"
                        android:id="@+id/tv_adres_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_2"
                        android:layout_marginStart="@dimen/space_2"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <in.sanitization.sanitization.Fonts.LatoBLack
                        android:textColor="#000"
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dsa" />

                    <in.sanitization.sanitization.Fonts.LatoBLack
                        android:textColor="#000"
                        android:id="@+id/tv_adres_charge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_2"
                        android:layout_marginStart="@dimen/space_2"
                        android:text="TextView" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5"
                    android:orientation="horizontal">


                    <in.sanitization.sanitization.Fonts.LatoBLack
                        android:textColor="#000"
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address:" />

                    <in.sanitization.sanitization.Fonts.LatoBLack
                        android:textColor="#000"
                        android:id="@+id/tv_adres_addres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_2"
                        android:layout_marginStart="@dimen/space_2"
                        android:text="TextView" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/line"
                android:layout_below="@id/liner"
               android:layout_marginTop="@dimen/space_10"
                android:background="@color/colorPrimary"

                android:layout_width="match_parent"
                android:layout_height="@dimen/space_2"/>

            <in.sanitization.sanitization.Fonts.LatoBLack
                android:id="@+id/txtEdit"
                android:layout_below="@id/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:padding="@dimen/space_5"

                android:text="Edit"/>
            <in.sanitization.sanitization.Fonts.LatoBLack
               android:id="@+id/txtDelete"
                android:layout_below="@id/line"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:padding="@dimen/space_5"
                android:text="Delete"/>

            <RadioButton
                android:id="@+id/rb_adres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_8" />

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>