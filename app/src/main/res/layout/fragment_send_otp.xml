<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".Fragments.SendOtpFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
   android:layout_marginTop="@dimen/space_30"
    android:gravity="center"
    android:layout_height="wrap_content">
    <TextView
        android:layout_above="@+id/et_gen_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="@dimen/space_15"
        android:text="Enter a valid Mobile number to recieve otp."/>

    <EditText
        android:fontFamily="@font/bold"
        android:id="@+id/et_gen_otp"
        android:hint="Mobile number"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginBottom="@dimen/space_12"
        android:layout_height="40dp"
        android:background="@drawable/edittext_layout"

        android:paddingLeft="@dimen/space_10"
        android:inputType="number"
        android:maxLength="10"
        android:layout_centerVertical="true"/>
    <Button
        android:id="@+id/btn_otp_verify"
        android:text=" Generate OTP"
        android:layout_below="@id/et_gen_otp"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:fontFamily="@font/bold"
        android:textAllCaps="false"
        android:textSize="@dimen/space_16"
        android:background="@drawable/button_background"

        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"/>
</LinearLayout>
</FrameLayout>