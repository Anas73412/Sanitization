<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context="in.sanitization.sanitization.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/semi_circle_layout"
        android:layout_height="300dp">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/iconn"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <in.sanitization.sanitization.Fonts.LatoBLack
            android:layout_width="wrap_content"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="@dimen/space_25"
            android:textColor="@color/white"
            android:textAlignment="center"

            android:layout_marginBottom="@dimen/space_30"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_back"
            android:background="@drawable/ic_keyboard_backspace_black_24dp"
            android:backgroundTint="@color/black"
            android:backgroundTintMode="src_in"
            android:layout_margin="@dimen/space_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_margin="@dimen/space_20"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_layout"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:weightSum="8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icons8_phone_50px"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space_5"
                android:padding="@dimen/space_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/et_mobile"
                android:background="@drawable/edittext_layout"
                android:layout_weight="6"
                android:paddingLeft="@dimen/space_5"
                android:hint="Mobile Number"
                android:inputType="number"
                android:maxLength="10"
                android:textSize="@dimen/space_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_layout"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:weightSum="8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icons8_key_24px"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space_5"
                android:padding="@dimen/space_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/et_pass"
                android:background="@drawable/edittext_layout"
                android:layout_weight="6"
                android:paddingLeft="@dimen/space_5"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="@dimen/space_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_login"
            android:text="Login"
            android:textColor="@color/white"
            android:layout_margin="@dimen/space_20"
            android:background="@drawable/button_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <in.sanitization.sanitization.Fonts.LatoBLack
            android:id="@+id/tv_create"
            android:textColor="@color/gdnt_top"
            android:textAlignment="gravity"
            android:gravity="right"
            android:text="To create new account..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
