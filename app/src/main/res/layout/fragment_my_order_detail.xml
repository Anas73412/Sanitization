<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/space_10"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"

    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/space_20">
            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="@dimen/space_3"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="4dp"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:textColor="@color/white"

                        android:layout_width="match_parent"
                        android:background="@drawable/bg_rounded_button"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/bold"
                        android:padding="@dimen/space_4"

                        android:textAlignment="center"
                        android:text="Order Details"
                        android:textSize="@dimen/space_15"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_margin="@dimen/space_2"
                            >

                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/txtid"
                                android:layout_width="67dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="0dp"
                                android:padding="2dp"
                                android:text="Order id:"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/space_14" />

                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/order_id"
                                android:layout_toRightOf="@id/txtid"
                                android:layout_width="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/space_2"
                                android:textAlignment="viewEnd"
                                android:layout_marginRight="20dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14"
                                android:layout_height="match_parent"
                                android:text=""
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_margin="@dimen/space_2"
                            >

                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/sts"
                                android:layout_width="67dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="0dp"
                                android:padding="2dp"
                                android:text="Status :"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/space_14" />

                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/status"
                                android:layout_toRightOf="@id/sts"
                                android:layout_width="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/space_2"
                                android:textAlignment="viewEnd"
                                android:layout_marginRight="20dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14"
                                android:layout_height="match_parent"
                                android:text=""
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_margin="@dimen/space_2"
                            >

                            <in.sanitization.sanitization.Fonts.LatoBLack                                    android:id="@+id/txtpin"
                                android:layout_width="67dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="0dp"
                                android:padding="2dp"
                                android:text="Date :"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/space_14" />

                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/date"
                                android:layout_toRightOf="@id/txtpin"
                                android:layout_width="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/space_2"
                                android:textAlignment="viewEnd"
                                android:layout_marginRight="20dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14"
                                android:layout_height="wrap_content"
                                android:text=""
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_margin="@dimen/space_2"
                            >

                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/nm"
                                android:layout_width="67dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="0dp"
                                android:padding="2dp"
                                android:text="Name:"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/space_14" />

                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/r_name"
                                android:layout_toRightOf="@+id/nm"
                                android:layout_width="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/space_2"
                                android:textAlignment="viewEnd"
                                android:layout_marginRight="20dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14"
                                android:layout_height="wrap_content"
                                android:text=""
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_margin="@dimen/space_2"
                            >

                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/mob"
                                android:layout_width="67dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="0dp"
                                android:padding="2dp"
                                android:text="Mobile :"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/space_14" />

                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/mobile"
                                android:layout_toRightOf="@id/mob"
                                android:layout_width="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/space_2"
                                android:textAlignment="viewEnd"
                                android:layout_marginRight="20dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14"
                                android:layout_height="wrap_content"
                                android:text=""
                                />
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/space_2"
                            >
                            <in.sanitization.sanitization.Fonts.LatoBLack

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/space_14"
                                android:padding="2dp"
                                android:text="Address :"
                                android:textColor="@android:color/black"/>


                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/address"
                                android:layout_toRightOf="@id/txtSociety"
                                android:layout_width="match_parent"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/space_2"
                                android:textAlignment="viewEnd"
                                android:layout_marginRight="20dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14"
                                android:layout_height="wrap_content"
                                android:text=""
                                />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_viewb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="@dimen/space_3"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="4dp"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:background="@drawable/bg_rounded_button"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/bold"
                        android:padding="@dimen/space_4"

                        android:textAlignment="center"
                        android:text="Package Details"
                        android:textSize="@dimen/space_15"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/plan_img"
                            android:layout_margin="@dimen/space_5"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/logo"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/space_1"
                            android:layout_margin="@dimen/space_3"
                            android:background="@color/gray"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_2"
                            >

                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/textname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="Package Name :"
                                android:textColor="@android:color/black"
                                android:textSize="14dp" />

                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/name"
                                android:layout_toRightOf="@id/textname"
                                android:layout_width="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/space_2"
                                android:textAlignment="viewEnd"
                                android:layout_marginRight="20dp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/space_14"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_2"
                            >

                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/txtprice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="Package Price :"
                                android:textColor="@android:color/black"
                                android:textSize="14dp" />

                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/price"
                                android:layout_toRightOf="@id/txtprice"
                                android:layout_width="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/space_2"
                                android:textAlignment="viewEnd"
                                android:layout_marginRight="20dp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/space_14"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_2"
                            >
                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/txtd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/space_14"
                                android:padding="2dp"
                                android:text="Duration :"/>

                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/duration"
                                android:layout_toRightOf="@id/txtd"
                                android:layout_width="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/space_2"
                                android:textAlignment="viewEnd"
                                android:layout_marginRight="20dp"
                                android:textSize="@dimen/space_14"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:text=""
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_2"
                            >
                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/txtex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/space_14"
                                android:padding="2dp"
                                android:text="Expires In :"/>

                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/expires"
                                android:layout_toRightOf="@id/txtex"
                                android:layout_width="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/space_2"
                                android:textAlignment="viewEnd"
                                android:layout_marginRight="20dp"
                                android:textSize="@dimen/space_14"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:text=""
                                />
                        </RelativeLayout>



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_margin="@dimen/space_2"
                            >

                            <in.sanitization.sanitization.Fonts.LatoBLack    android:id="@+id/txtHouse"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="0dp"
                                android:padding="2dp"
                                android:text="House No. :"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/space_14"
                                android:visibility="gone"/>

                            <in.sanitization.sanitization.Fonts.LatoBLack                                    android:id="@+id/Houseno"
                                android:layout_toRightOf="@id/txtHouse"
                                android:layout_width="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/space_2"
                                android:textAlignment="viewEnd"
                                android:layout_marginRight="20dp"
                                android:textSize="@dimen/space_14"
                                android:textColor="@color/colorPrimary"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:visibility="gone"
                                />
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/space_2"
                            >
                            <in.sanitization.sanitization.Fonts.LatoBLack        android:id="@+id/txtSociety"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/space_14"
                                android:padding="2dp"
                                android:text="Description :"
                                android:textColor="@android:color/black"/>


                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/description"
                                android:layout_toRightOf="@id/txtSociety"
                                android:layout_width="match_parent"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/space_2"

                                android:layout_marginRight="20dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/space_14"
                                android:layout_height="wrap_content"
                                android:text=""
                                />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_order_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/app_bar"
                android:visibility="gone"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_above="@+id/textDateTimeView" />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_worker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="@dimen/space_3"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="4dp"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"


                >

            <LinearLayout

                android:background="@drawable/address_edittext"
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"

                    android:layout_width="match_parent"
                    android:background="@drawable/bg_rounded_button"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/bold"
                    android:padding="@dimen/space_4"

                    android:textAlignment="center"
                    android:text="Worker Alloted"
                    android:textSize="@dimen/space_15"
                    />


                <LinearLayout

                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/w_img"
                            android:layout_margin="@dimen/space_5"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:src="@drawable/logo"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_weight="4"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/space_10"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/w_name"

                                android:layout_width="match_parent"
                                android:padding="@dimen/space_2"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/space_14"/>
                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/w_mobile"

                                android:layout_width="match_parent"
                                android:padding="@dimen/space_2"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/space_14"/>
                            <in.sanitization.sanitization.Fonts.LatoBLack
                                android:id="@+id/w_email"
                                android:layout_width="match_parent"
                                android:padding="@dimen/space_2"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/space_14"/>
                        </LinearLayout>
                        <in.sanitization.sanitization.Fonts.LatoBLack
                            android:textSize="@dimen/space_10"
                            android:text="More Info.."
                            android:textColor="@color/black"
                            android:gravity="end"
                           android:layout_marginRight="@dimen/space_20"
                            android:paddingRight="@dimen/space_20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/textDateTimeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/input_bar"
                android:background="#fff"
                android:visibility="gone"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:orientation="vertical"
                    android:padding="@dimen/space_10">

                    <in.sanitization.sanitization.Fonts.LatoBLack
                        android:id="@+id/tv_order_Detail_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000" />

                    <in.sanitization.sanitization.Fonts.LatoBLack
                        android:id="@+id/tv_order_Detail_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000" />

                    <in.sanitization.sanitization.Fonts.LatoBLack
                        android:id="@+id/tv_order_Detail_deli_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/btn_order_detail_cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/bg_rounded_button"
                    android:padding="12dp">

                    <in.sanitization.sanitization.Fonts.LatoBLack
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/tv_order_cancle"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_size_small" />


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/input_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="@dimen/space_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <in.sanitization.sanitization.Fonts.LatoBLack
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_order_summery"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <in.sanitization.sanitization.Fonts.LatoBLack
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_order_total"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <in.sanitization.sanitization.Fonts.LatoBLack
                        android:id="@+id/tv_order_Detail_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_10"
                        android:layout_marginStart="@dimen/space_10"
                        android:text="00.00"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</FrameLayout>