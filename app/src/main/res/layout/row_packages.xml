<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_marginRight="@dimen/space_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lin_container"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:backgroundTint="@color/colorAccent"
        android:background="@drawable/btn_cornor_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <in.binplus.sanitization.Fonts.LatoBLack
            android:textColor="@color/white"
            android:text="Package 1"
            android:id="@+id/tv_pck_name"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <in.binplus.sanitization.Fonts.LatoBLack
            android:textColor="@color/white"
            android:text="200"
            android:id="@+id/tv_amount"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <in.binplus.sanitization.Fonts.LatoBLack
            android:textColor="@color/white"
            android:text="Package 1"
            android:id="@+id/tv_desc"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_10"
            android:textSize="@dimen/space_11"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <RelativeLayout
            android:id="@+id/rel_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_shape"
            android:layout_width="50dp"
            android:backgroundTint="@color/color_2"
            android:layout_height="50dp">
            <ImageView
                android:layout_margin="@dimen/space_2"
                android:src="@drawable/circled_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>