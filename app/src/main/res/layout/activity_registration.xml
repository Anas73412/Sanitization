<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:layout_height="match_parent"
    tools:context="in.sanitization.sanitization.RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/semi_circle_layout"
        android:layout_height="300dp">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/iconn"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <in.sanitization.sanitization.Fonts.LatoBLack
            android:layout_width="wrap_content"
            android:text="Registration"
            android:textAllCaps="false"
            android:textSize="@dimen/space_25"
            android:textColor="@color/white"
            android:textAlignment="center"

            android:layout_marginBottom="@dimen/space_20"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_back"
            android:background="@drawable/ic_keyboard_backspace_black_24dp"
            android:backgroundTint="@color/white"
            android:backgroundTintMode="src_in"
            android:layout_margin="@dimen/space_20"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_margin="@dimen/space_20"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_layout"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:weightSum="8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icons8_user_50px"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space_5"
                android:padding="@dimen/space_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/et_name"
                android:background="@drawable/edittext_layout"
                android:layout_weight="6"
                android:paddingLeft="@dimen/space_5"
                android:hint="Name"
                android:singleLine="true"
                android:textSize="@dimen/space_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_layout"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:weightSum="8"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                  android:src="@drawable/icons8_phone_50px"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/space_5"
                    android:padding="@dimen/space_10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <EditText
                    android:id="@+id/et_number"
                    android:background="@drawable/edittext_layout"
                    android:layout_weight="6"
                    android:paddingLeft="@dimen/space_5"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textSize="@dimen/space_14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_layout"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:weightSum="8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icons8_composing_mail_50px"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space_5"
                android:padding="@dimen/space_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/et_email"
                android:background="@drawable/edittext_layout"
                android:layout_weight="6"
                android:paddingLeft="@dimen/space_5"
                android:hint="Email"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/space_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_layout"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:weightSum="8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icons8_home_address_32px"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space_5"
                android:padding="@dimen/space_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <AutoCompleteTextView
                android:id="@+id/et_state"
                android:background="@drawable/edittext_layout"
                android:layout_weight="6.5"
                android:paddingLeft="@dimen/space_5"
                android:hint="State"
                android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                android:drawableTint="@android:color/darker_gray"

                android:textSize="@dimen/space_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_layout"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:weightSum="8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icons8_home_address_32px"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space_5"
                android:padding="@dimen/space_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <AutoCompleteTextView
                android:id="@+id/et_district"
                android:background="@drawable/edittext_layout"
                android:layout_weight="6.5"
                android:paddingLeft="@dimen/space_5"
                android:hint="District"
               android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                android:drawableTint="@android:color/darker_gray"

                android:textSize="@dimen/space_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_layout"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:weightSum="8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icons8_home_address_32px"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space_5"
                android:padding="@dimen/space_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/spin_block"
                android:layout_weight="6.5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:spinnerMode="dropdown"
                android:hint="City"
                android:textSize="14dp"
                android:singleLine="true"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_layout"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:weightSum="8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icons8_home_address_32px"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space_5"
                android:padding="@dimen/space_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/et_pincode"
                android:background="@drawable/edittext_layout"
                android:layout_weight="6.5"
                android:paddingLeft="@dimen/space_5"
                android:hint="Pincode"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="@dimen/space_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/address_edittext"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:weightSum="8"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icons8_home_address_32px"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space_5"
                android:padding="@dimen/space_10"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <EditText
                android:id="@+id/et_address"
                android:background="@drawable/address_edittext"
                android:layout_weight="6"
                android:paddingLeft="@dimen/space_5"
                android:hint="Address"
                android:gravity="start"
                android:paddingTop="@dimen/space_10"
                android:textAlignment="gravity"
                android:textSize="@dimen/space_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_layout"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:weightSum="8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icons8_key_24px"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space_5"
                android:padding="@dimen/space_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/et_pass"
                android:background="@drawable/edittext_layout"
                android:layout_weight="6"
                android:paddingLeft="@dimen/space_5"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="@dimen/space_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_layout"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:weightSum="8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icons8_key_24px"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space_5"
                android:padding="@dimen/space_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/et_con_pass"
                android:background="@drawable/edittext_layout"
                android:layout_weight="6"
                android:paddingLeft="@dimen/space_5"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textSize="@dimen/space_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_reg"
            android:text="Register"
            android:textColor="@color/white"
            android:layout_margin="@dimen/space_20"
            android:textAllCaps="false"
            android:background="@drawable/button_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
